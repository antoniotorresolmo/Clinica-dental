<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schema.android.com/apk/res-auto"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewReceta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app2:cardCornerRadius="25dp"
    app2:cardElevation="6dp"
    app:cardCornerRadius="50dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/lblDescripcionRVRecetario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblDescripcionRVRecetario"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>