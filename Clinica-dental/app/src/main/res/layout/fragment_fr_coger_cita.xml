<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.FrCogerCita">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondo">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="wrap_content"
                android:layout_height="306dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                app:layout_constraintCircleRadius="20dp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn10"
                    style="@style/botonesHoras"
                    android:text="@string/btn10CC"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/btn11"
                    style="@style/botonesHoras"
                    android:text="@string/btn11CC"
                    app:cornerRadius="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn12"
                    style="@style/botonesHoras"
                    android:text="@string/btn12CC"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/btn13"
                    style="@style/botonesHoras"
                    android:text="@string/btn13CC"
                    app:cornerRadius="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn14"
                    style="@style/botonesHoras"
                    android:text="@string/btn14CC"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/btn15"
                    style="@style/botonesHoras"
                    android:text="@string/btn15CC"
                    app:cornerRadius="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn16"
                    style="@style/botonesHoras"
                    android:text="@string/btn16CC"
                    app:cornerRadius="30dp" />

                <Button
                    android:id="@+id/btn17"
                    style="@style/botonesHoras"
                    android:text="@string/btn17CC"
                    app:cornerRadius="30dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>