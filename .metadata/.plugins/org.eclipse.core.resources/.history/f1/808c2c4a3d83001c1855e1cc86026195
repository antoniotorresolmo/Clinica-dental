package views;

import javax.swing.JPanel;
import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.List;
import javax.swing.JScrollPane;
import javax.swing.border.EmptyBorder;
import com.toedter.calendar.JCalendar;
import javax.swing.JList;
import java.awt.Font;
import javax.swing.JButton;

public class PnlAgenda extends JPanel {
	
	private JCalendar calendar;
	Color transparente = new Color(1.0f, 1.0f, 1.0f, 0.0f);
	public PnlAgenda() {
		setLayout(new BorderLayout(0, 0));
		
		JPanel panel_1 = new JPanel();
		add(panel_1, BorderLayout.CENTER);
		panel_1.setLayout(new BorderLayout(0, 0));
		//setUndecorated(true);
		JScrollPane scrollPane = new JScrollPane();
		panel_1.add(scrollPane, BorderLayout.CENTER);
		
		JPanel panelCentral = new JPanel();
	

		scrollPane.setViewportView(panelCentral);
		
		calendar = new JCalendar();
		calendar.getDayChooser().getDayPanel().setBackground(transparente);
		calendar.setBackground(transparente);
		BorderLayout borderLayout = (BorderLayout) calendar.getLayout();
		calendar.getMonthChooser().getSpinner().setFont(new Font("Tahoma", Font.PLAIN, 20));
		calendar.getYearChooser().getSpinner().setFont(new Font("Quicksand", Font.PLAIN, 20));
		calendar.getDayChooser().setFont(new Font("Quicksand", Font.PLAIN, 20));
		
		//panelCentral.setPreferredSize(new Dimension(600, 400));
		panelCentral.setLayout(new BorderLayout(0, 0));
		
		//JPanel panelCalendario = new JPanel();
		GradientPanel panelCalendario = new GradientPanel(Color.decode("#3CE6DB"), Color.decode("#4FFFA5"));
		panelCalendario.setLayout(new BorderLayout(0, 0));
		panelCalendario.add(calendar, BorderLayout.CENTER);
		panelCalendario.setBorder(new EmptyBorder(5,5,0,5));
		panelCentral.add(panelCalendario, BorderLayout.CENTER);
		
		JPanel panel = new JPanel();
		panel.setBackground(transparente);
		panelCalendario.add(panel, BorderLayout.SOUTH);
		panel.setLayout(new FlowLayout(FlowLayout.RIGHT, 5, 5));
		
		JButton btnAnadirCita = new JButton("A\u00F1adir cita");
		btnAnadirCita.setFont(new Font("Quicksand", Font.PLAIN, 11));
		btnAnadirCita.setBackground(views.JDialogLogin.principal);
		panel.add(btnAnadirCita);
		
		JPanel panelLista = new JPanel();
		panelLista.setBackground(transparente);
		panel_1.add(panelLista, BorderLayout.WEST);
		panelLista.setBorder(new EmptyBorder(5,5,30,5));
		panelLista.setLayout(new BorderLayout(0, 0));
		
		List lista = new List();
		panelLista.add(lista);
		
		

	}

}
